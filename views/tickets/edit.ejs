<% layout("layouts/boilerplate") %>

    <style>
        .form-container {
            max-width: 900px;
            margin: 2rem auto;
        }

        .form-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2.5rem;
            border-radius: 20px 20px 0 0;
            text-align: center;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        }

        .form-header h1 {
            font-size: 2.2rem;
            font-weight: 800;
            margin-bottom: 0.5rem;
        }

        .ticket-number-display {
            display: inline-block;
            background: rgba(255, 255, 255, 0.3);
            padding: 0.5rem 1.5rem;
            border-radius: 25px;
            font-weight: 700;
            margin-top: 0.5rem;
        }

        .form-body {
            background: white;
            padding: 2.5rem;
            border-radius: 0 0 20px 20px;
            box-shadow: 0 5px 30px rgba(0, 0, 0, 0.1);
        }

        .form-section {
            margin-bottom: 2.5rem;
            padding-bottom: 2rem;
            border-bottom: 2px solid #f0f0f0;
        }

        .form-section:last-child {
            border-bottom: none;
            margin-bottom: 0;
            padding-bottom: 0;
        }

        .section-title {
            font-size: 1.3rem;
            font-weight: 700;
            color: #2C3E50;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .section-title i {
            color: #667eea;
        }

        .form-label {
            font-weight: 600;
            color: #34495E;
            margin-bottom: 0.5rem;
            font-size: 0.95rem;
        }

        .required {
            color: #E74C3C;
        }

        .form-control,
        .form-select {
            border: 2px solid #E8E8E8;
            border-radius: 10px;
            padding: 0.75rem 1rem;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .form-control:focus,
        .form-select:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.15);
        }

        textarea.form-control {
            min-height: 120px;
            resize: vertical;
        }

        .btn-submit {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            border: none;
            padding: 1rem 3rem;
            font-size: 1.1rem;
            font-weight: 700;
            border-radius: 30px;
            transition: all 0.3s ease;
            box-shadow: 0 5px 20px rgba(102, 126, 234, 0.3);
        }

        .btn-submit:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 30px rgba(102, 126, 234, 0.4);
            color: white;
        }

        .btn-cancel {
            background: #E8E8E8;
            color: #34495E;
            border: none;
            padding: 1rem 2rem;
            font-size: 1.1rem;
            font-weight: 600;
            border-radius: 30px;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }

        .btn-cancel:hover {
            background: #D0D0D0;
            transform: translateY(-2px);
            color: #34495E;
        }

        .form-buttons {
            display: flex;
            gap: 1rem;
            justify-content: center;
            margin-top: 2rem;
        }

        @media (max-width: 768px) {
            .form-container {
                margin: 1rem;
            }

            .form-body {
                padding: 1.5rem;
            }

            .form-buttons {
                flex-direction: column;
            }

            .btn-submit,
            .btn-cancel {
                width: 100%;
            }
        }
    </style>

    <div class="form-container">
        <div class="form-header">
            <h1><i class="fas fa-edit"></i> Edit Ticket</h1>
            <div class="ticket-number-display">
                <%= ticket.ticketNumber %>
            </div>
        </div>

        <div class="form-body">
            <form action="/tickets/<%= ticket._id %>?_method=PUT" method="POST">
                <!-- Customer Information Section -->
                <div class="form-section">
                    <h3 class="section-title">
                        <i class="fas fa-user"></i>
                        Customer Information
                    </h3>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="customerName" class="form-label">
                                Full Name <span class="required">*</span>
                            </label>
                            <input type="text" class="form-control" id="customerName" name="ticket[customerName]"
                                value="<%= ticket.customerName %>" required>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label for="customerEmail" class="form-label">
                                Email Address <span class="required">*</span>
                            </label>
                            <input type="email" class="form-control" id="customerEmail" name="ticket[customerEmail]"
                                value="<%= ticket.customerEmail %>" required>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="customerPhone" class="form-label">
                            Phone Number <span class="required">*</span>
                        </label>
                        <input type="tel" class="form-control" id="customerPhone" name="ticket[customerPhone]"
                            value="<%= ticket.customerPhone %>" required>
                    </div>
                </div>

                <!-- Ticket Details Section -->
                <div class="form-section">
                    <h3 class="section-title">
                        <i class="fas fa-info-circle"></i>
                        Ticket Details
                    </h3>

                    <div class="mb-3">
                        <label for="subject" class="form-label">
                            Subject <span class="required">*</span>
                        </label>
                        <input type="text" class="form-control" id="subject" name="ticket[subject]"
                            value="<%= ticket.subject %>" required>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label for="category" class="form-label">
                                Category <span class="required">*</span>
                            </label>
                            <select class="form-select" id="category" name="ticket[category]" required>
                                <option value="Technical" <%=ticket.category==='Technical' ? 'selected' : '' %>
                                    >Technical</option>
                                <option value="Billing" <%=ticket.category==='Billing' ? 'selected' : '' %>>Billing
                                </option>
                                <option value="Product" <%=ticket.category==='Product' ? 'selected' : '' %>>Product
                                </option>
                                <option value="Service" <%=ticket.category==='Service' ? 'selected' : '' %>>Service
                                </option>
                                <option value="Complaint" <%=ticket.category==='Complaint' ? 'selected' : '' %>
                                    >Complaint</option>
                                <option value="Other" <%=ticket.category==='Other' ? 'selected' : '' %>>Other</option>
                            </select>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label for="priority" class="form-label">
                                Priority <span class="required">*</span>
                            </label>
                            <select class="form-select" id="priority" name="ticket[priority]" required>
                                <option value="Low" <%=ticket.priority==='Low' ? 'selected' : '' %>>üü¢ Low</option>
                                <option value="Medium" <%=ticket.priority==='Medium' ? 'selected' : '' %>>üü° Medium
                                </option>
                                <option value="High" <%=ticket.priority==='High' ? 'selected' : '' %>>üî¥ High</option>
                                <option value="Critical" <%=ticket.priority==='Critical' ? 'selected' : '' %>>‚ö†Ô∏è
                                    Critical</option>
                            </select>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label for="status" class="form-label">
                                Status <span class="required">*</span>
                            </label>
                            <select class="form-select" id="status" name="ticket[status]" required>
                                <option value="Open" <%=ticket.status==='Open' ? 'selected' : '' %>>Open</option>
                                <option value="In Progress" <%=ticket.status==='In Progress' ? 'selected' : '' %>>In
                                    Progress</option>
                                <option value="Resolved" <%=ticket.status==='Resolved' ? 'selected' : '' %>>Resolved
                                </option>
                                <option value="Closed" <%=ticket.status==='Closed' ? 'selected' : '' %>>Closed</option>
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="department" class="form-label">
                                Department <span class="required">*</span>
                            </label>
                            <select class="form-select" id="department" name="ticket[department]" required>
                                <option value="IT Support" <%=ticket.department==='IT Support' ? 'selected' : '' %>>IT
                                    Support</option>
                                <option value="Customer Service" <%=ticket.department==='Customer Service' ? 'selected'
                                    : '' %>>Customer Service</option>
                                <option value="Sales" <%=ticket.department==='Sales' ? 'selected' : '' %>>Sales</option>
                                <option value="Accounts" <%=ticket.department==='Accounts' ? 'selected' : '' %>>Accounts
                                </option>
                                <option value="Operations" <%=ticket.department==='Operations' ? 'selected' : '' %>
                                    >Operations</option>
                            </select>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label for="assignedTo" class="form-label">
                                Assigned To
                            </label>
                            <input type="text" class="form-control" id="assignedTo" name="ticket[assignedTo]"
                                value="<%= ticket.assignedTo %>" placeholder="Agent name...">
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">
                            Description <span class="required">*</span>
                        </label>
                        <textarea class="form-control" id="description" name="ticket[description]"
                            required><%= ticket.description %></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="notes" class="form-label">
                            Additional Notes
                        </label>
                        <textarea class="form-control" id="notes" name="ticket[notes]"
                            rows="3"><%= ticket.notes %></textarea>
                    </div>
                </div>

                <!-- Form Buttons -->
                <div class="form-buttons">
                    <button type="submit" class="btn btn-submit">
                        <i class="fas fa-save"></i> Update Ticket
                    </button>
                    <a href="/tickets/<%= ticket._id %>" class="btn btn-cancel">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>