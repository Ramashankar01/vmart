<% layout("layouts/boilerplate") %>

    <style>
        .form-container {
            max-width: 900px;
            margin: 2rem auto;
        }

        .form-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2.5rem;
            border-radius: 20px 20px 0 0;
            text-align: center;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
        }

        .form-header h1 {
            font-size: 2.2rem;
            font-weight: 800;
            margin-bottom: 0.5rem;
        }

        .form-header p {
            font-size: 1rem;
            opacity: 0.95;
            margin: 0;
        }

        .form-body {
            background: white;
            padding: 2.5rem;
            border-radius: 0 0 20px 20px;
            box-shadow: 0 5px 30px rgba(0, 0, 0, 0.1);
        }

        .form-section {
            margin-bottom: 2.5rem;
            padding-bottom: 2rem;
            border-bottom: 2px solid #f0f0f0;
        }

        .form-section:last-child {
            border-bottom: none;
            margin-bottom: 0;
            padding-bottom: 0;
        }

        .section-title {
            font-size: 1.3rem;
            font-weight: 700;
            color: #2C3E50;
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .section-title i {
            color: #667eea;
        }

        .form-label {
            font-weight: 600;
            color: #34495E;
            margin-bottom: 0.5rem;
            font-size: 0.95rem;
        }

        .required {
            color: #E74C3C;
            margin-left: 0.2rem;
        }

        .form-control,
        .form-select {
            border: 2px solid #E8E8E8;
            border-radius: 10px;
            padding: 0.75rem 1rem;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .form-control:focus,
        .form-select:focus {
            border-color: #667eea;
            box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.15);
        }

        textarea.form-control {
            min-height: 120px;
            resize: vertical;
        }

        .input-icon {
            position: relative;
        }

        .input-icon i {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: #7F8C8D;
        }

        .input-icon .form-control,
        .input-icon .form-select {
            padding-left: 2.8rem;
        }

        .btn-submit {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            border: none;
            padding: 1rem 3rem;
            font-size: 1.1rem;
            font-weight: 700;
            border-radius: 30px;
            transition: all 0.3s ease;
            box-shadow: 0 5px 20px rgba(102, 126, 234, 0.3);
        }

        .btn-submit:hover {
            transform: translateY(-3px);
            box-shadow: 0 8px 30px rgba(102, 126, 234, 0.4);
            color: white;
        }

        .btn-cancel {
            background: #E8E8E8;
            color: #34495E;
            border: none;
            padding: 1rem 2rem;
            font-size: 1.1rem;
            font-weight: 600;
            border-radius: 30px;
            transition: all 0.3s ease;
        }

        .btn-cancel:hover {
            background: #D0D0D0;
            transform: translateY(-2px);
        }

        .form-buttons {
            display: flex;
            gap: 1rem;
            justify-content: center;
            margin-top: 2rem;
        }

        .help-text {
            font-size: 0.85rem;
            color: #7F8C8D;
            margin-top: 0.3rem;
        }

        .priority-indicator {
            display: inline-block;
            width: 12px;
            height: 12px;
            border-radius: 50%;
            margin-right: 0.5rem;
        }

        @media (max-width: 768px) {
            .form-container {
                margin: 1rem;
            }

            .form-body {
                padding: 1.5rem;
            }

            .form-buttons {
                flex-direction: column;
            }

            .btn-submit,
            .btn-cancel {
                width: 100%;
            }
        }
    </style>

    <div class="form-container">
        <div class="form-header">
            <h1><i class="fas fa-ticket-alt"></i> Raise New Ticket</h1>
            <p>Fill in the details below and we'll get back to you as soon as possible</p>
        </div>

        <div class="form-body">
            <form action="/tickets" method="POST">
                <!-- Customer Information Section -->
                <div class="form-section">
                    <h3 class="section-title">
                        <i class="fas fa-user"></i>
                        Customer Information
                    </h3>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="customerName" class="form-label">
                                Full Name <span class="required">*</span>
                            </label>
                            <div class="input-icon">
                                <i class="fas fa-user"></i>
                                <input type="text" class="form-control" id="customerName" name="ticket[customerName]"
                                    placeholder="Enter your full name" required>
                            </div>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label for="customerEmail" class="form-label">
                                Email Address <span class="required">*</span>
                            </label>
                            <div class="input-icon">
                                <i class="fas fa-envelope"></i>
                                <input type="email" class="form-control" id="customerEmail" name="ticket[customerEmail]"
                                    placeholder="your@email.com" required>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="customerPhone" class="form-label">
                            Phone Number <span class="required">*</span>
                        </label>
                        <div class="input-icon">
                            <i class="fas fa-phone"></i>
                            <input type="tel" class="form-control" id="customerPhone" name="ticket[customerPhone]"
                                placeholder="+91 1234567890" required>
                        </div>
                    </div>
                </div>

                <!-- Ticket Details Section -->
                <div class="form-section">
                    <h3 class="section-title">
                        <i class="fas fa-info-circle"></i>
                        Ticket Details
                    </h3>

                    <div class="mb-3">
                        <label for="subject" class="form-label">
                            Subject <span class="required">*</span>
                        </label>
                        <div class="input-icon">
                            <i class="fas fa-heading"></i>
                            <input type="text" class="form-control" id="subject" name="ticket[subject]"
                                placeholder="Brief description of your issue" required>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label for="category" class="form-label">
                                Category <span class="required">*</span>
                            </label>
                            <div class="input-icon">
                                <i class="fas fa-tags"></i>
                                <select class="form-select" id="category" name="ticket[category]" required>
                                    <option value="" selected disabled>Select category</option>
                                    <option value="Technical">Technical</option>
                                    <option value="Billing">Billing</option>
                                    <option value="Product">Product</option>
                                    <option value="Service">Service</option>
                                    <option value="Complaint">Complaint</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label for="priority" class="form-label">
                                Priority <span class="required">*</span>
                            </label>
                            <div class="input-icon">
                                <i class="fas fa-exclamation-circle"></i>
                                <select class="form-select" id="priority" name="ticket[priority]" required>
                                    <option value="" selected disabled>Select priority</option>
                                    <option value="Low">üü¢ Low</option>
                                    <option value="Medium" selected>üü° Medium</option>
                                    <option value="High">üî¥ High</option>
                                    <option value="Critical">‚ö†Ô∏è Critical</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label for="department" class="form-label">
                                Department <span class="required">*</span>
                            </label>
                            <div class="input-icon">
                                <i class="fas fa-building"></i>
                                <select class="form-select" id="department" name="ticket[department]" required>
                                    <option value="" selected disabled>Select department</option>
                                    <option value="IT Support">IT Support</option>
                                    <option value="Customer Service" selected>Customer Service</option>
                                    <option value="Sales">Sales</option>
                                    <option value="Accounts">Accounts</option>
                                    <option value="Operations">Operations</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">
                            Description <span class="required">*</span>
                        </label>
                        <textarea class="form-control" id="description" name="ticket[description]"
                            placeholder="Please provide detailed information about your issue..." required></textarea>
                        <div class="help-text">
                            <i class="fas fa-info-circle"></i> Please be as detailed as possible to help us resolve your
                            issue quickly
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="notes" class="form-label">
                            Additional Notes (Optional)
                        </label>
                        <textarea class="form-control" id="notes" name="ticket[notes]"
                            placeholder="Any additional information..." rows="3"></textarea>
                    </div>
                </div>

                <!-- Form Buttons -->
                <div class="form-buttons">
                    <button type="submit" class="btn btn-submit">
                        <i class="fas fa-paper-plane"></i> Submit Ticket
                    </button>
                    <a href="/" class="btn btn-cancel">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>